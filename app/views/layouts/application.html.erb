<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <% if user_signed_in? %>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to 'CloneBook', root_path, :class => "navbar-brand" %></h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <%= image_tag current_user.gravatar_url, :class => "gravatar mr-3" %> 
        <%= current_user.first_name.capitalize! %> <%= current_user.last_name.capitalize! %>
        <%= link_to 'Home' ,root_path, :class => "p-2 text-dark" %>
        <%= link_to 'Users' , users_path, :class => "p-2 text-dark" %>
        <%= link_to 'Notifications' , friendships_path, :class => "p-2 text-dark" %>
      </nav>
       <%= link_to 'Sign Out', destroy_user_session_path , method: :delete, :class => "btn btn-outline-primary" %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
