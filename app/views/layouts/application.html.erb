<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <% if user_signed_in? %>
      <%= image_tag current_user.gravatar_url, :class => "gravatar" %>
      <b> <%= current_user.first_name %> <%= current_user.last_name %> </b>
      <%= link_to 'Sign Out' ,destroy_user_session_path , method: :delete %>
      <%= link_to 'Home' ,root_path %>
      <%= link_to 'Users' , users_path %>
      <%= link_to  pluralize(current_user.request_counter , 'Notification') , friendships_path %>
      <%= link_to 'Friends' , friends_path %>
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>
